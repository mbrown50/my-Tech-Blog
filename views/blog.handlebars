<form class="form new-blog-form">
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Blog:</h3>
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" value="{{title}}" {{#if
          logged_in}}{{else}}disabled{{/if}} />
        <p class="posted-by">Posted by {{name}} on {{format_date date_created}}</p>
      </div>
      <div class="form-group">
        <label for="blog-desc">description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc" {{#if
          logged_in}}{{else}}disabled{{/if}}>{{description}}</textarea>
      </div>
      {{#if logged_in}}
      <div class="form-group">
        <button class="btn btn-primary blog-edit" data-id="{{id}}">Edit</button>
        <button class="btn btn-primary blog-delete" data-id="{{id}}">Delete post</button>     
      </div>
      {{/if}}
    </div>
  </div>
</form>
{{#if logged_in}}
<button class="btn btn-primary blog-comment" data-id="{{id}}">Create comment</button>
<button class="btn btn-primary blog-cancel">Cancel</button>
{{/if}}
<br /><br />
{{#if comments.length}}
<div class="col-md-20 blog-list post-delete">
  <h3>Comments:</h3>
  {{#each comments as |comment| }}
  <div class="row mb-20">
    <div class="col-md-8">
      <p class="posted-by">Posted by {{name}} on {{format_date comment.date_created}}</p>
      {{comment.comment}}
      </p>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}

<script src="/js/blog.js"></script>