<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-20">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p class="posted-by">Posted by {{blog.user.title}} on {{format_date blog.date_created}}</p>
    <p>
      {{blog.description}}
    </p>
  </div>
</div>
{{/each}}
