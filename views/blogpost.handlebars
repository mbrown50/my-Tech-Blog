<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New blog:</h3>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-desc">description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary blog-create">Create</button>
      </div>
    </form>
    <button class="btn btn-primary blog-cancel">Cancel</button>
  </div>
</div>
<script src="./js/blogpost.js"></script>