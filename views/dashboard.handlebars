<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<div class="blogBtn"><p>
  <button class="btn btn-primary post1">Create new post</button>
</p></div>
{{#if blogs.length}}
<div class="col-md-20 blog-list post-delete">
  <h3>Your Blogs:</h3>
  {{#each blogs as |blog| }}
  <div class="row mb-20">
    <div class="col-md-8">
      <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      <p class="posted-by">Posted on {{format_date date_created}}</p>
      {{blog.description}}
      </p>
    </div>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">Delete</button>
    </div>
  </div>
  {{/each}}
</div>
<div class="blogBtn"><p><button class="btn btn-primary post2">Create new post</button></p></div>
{{/if}}
<script src="./js/dashboard.js"></script>
 